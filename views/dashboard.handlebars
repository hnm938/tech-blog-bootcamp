{{#extend "layouts/main"}}
  {{#content "main"}}
    <h2>Welcome to Your Dashboard, {{user.username}}!</h2>
    <a href="/new-post">Create New Blog Post</a>
    {{#if user.blogposts.length}}
      <ul>
        {{#each user.blogposts}}
          <li>
            <h3>{{title}}</h3>
            <p>Date: {{createdAt}}</p>
            <a href="/post/{{id}}">Read More</a>
          </li>
        {{/each}}
      </ul>
    {{else}}
      <p>No blog posts yet.</p>
    {{/if}}
  {{/content}}
{{/extend}}
