{{#extend "layouts/main"}}
  {{#content "main"}}
    <article>
      <h2>{{post.title}}</h2>
      <p>By {{post.user.username}} | Date: {{post.createdAt}}</p>
      <p>{{post.content}}</p>
    </article>
    <hr>
    <h3>Comments</h3>
    <ul>
      {{#each comments}}
        <li>
          <p>{{this.text}}</p>
          <p>By {{this.user.username}} | Date: {{this.createdAt}}</p>
        </li>
      {{/each}}
    </ul>
    <h3>Add a Comment</h3>
    <form action="/comment/{{post.id}}" method="POST">
      <textarea name="commentText" rows="4" cols="50" required></textarea>
      <button type="submit">Submit Comment</button>
    </form>
  {{/content}}
{{/extend}}
